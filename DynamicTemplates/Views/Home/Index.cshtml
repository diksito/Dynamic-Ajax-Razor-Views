@model IEnumerable<DynamicTemplates.Models.Article>
@{
    ViewBag.Title = "Home";
}
@section scripts{
<script src="@Url.Content("~/Scripts/articles.js")"></script>
}

<div class="jumbotron">
    <h1>Welcome to dynamic templates<br></h1>
    <p class="lead">ASP.NET is a free web framework for building great Web sites and Web applications using HTML, CSS and JavaScript.</p>
    <p><a href="http://asp.net" class="btn btn-primary btn-lg">Learn more &raquo;</a></p>
</div>

<div class="row" id="article-list" data-request-url="@Url.HttpRouteUrl("DefaultApi", new { controller = "Article", method = "" })">
    @foreach (var item in Model)
    {
        @Html.Partial("_PartialArticle", item)
    }
</div>